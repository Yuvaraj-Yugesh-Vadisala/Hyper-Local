<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression_Test_Suite_Master">
    <listeners>
        <listener class-name="EventListeners.AllureScreenShot"/>
    </listeners>
    <test verbose="2" preserve-order="true" name="Hyper_Local" thread-count="6" parallel="classes">
        <classes>
            <class name="TestPulse.AssertManager">
                <methods>
                    <include name="CreateFacebookCarouselAdsWithLeads"/>
                    <include name="ValidateAllFieldsWhileCreatingFacebookCarouselAds"/>
                    <include name="CreateFacebookProductAdsWithLeads"/>
                    <include name="ValidateAllFieldsWhileCreatingFacebookProductAds"/>
                    <include name="CreateGoogleCallOnlyAds"/>
                    <include name="ValidateAllFieldsWhileCreatingGoogleResponsiveSearchAds"/>
                    <include name="CreateGooglePerformanceMaxAds"/>
                    <include name="ValidateAllFieldsWhileCreatingGooglePerformanceMaxAds"/>
                    <include name="ValidateAllFeaturesWhileReviewingFacebookCarouselAds"/>
                    <include name="ValidateAllFeaturesWhileReviewingFacebookProductAds"/>
                    <include name="ValidateAllFeaturesWhileReviewingGoogleSearchAds"/>
                </methods>
            </class>
            <class name="TestPulse.CampaignManagement">
                <methods>
                    
                    <include name="CreateCampaignManagement"/>
                    <include name="ValidateAllFieldsWhileCreatingCampaign"/>
                </methods>
            </class>
            <class name="TestPulse.PostManagement">
                <methods>
                    
                    <include name="CreationOfPostFacebook"/>
                </methods>
            </class>
            <class name="TestPulse.PostReview">
                <methods>
                    
                    <include name="PostReview"/>
                </methods>
            </class>
            <class name="TestPulse.PostTemplates">
                <methods>
                    
                    <include name="CreationOfPostTemplateGoogle"/>
                    <include name="CreationOfPostTemplateFacebook"/>
                </methods>
            </class>
            <class name="TestPulse.RuleBasedActions">
                <methods>
                    
                    <include name="CreationOfRuleBasedBulkAction"/>
                    <include name="CreationOfRuleBasedBulkActionNegative"/>
                </methods>
            </class>
            <class name="TestSeller.Dashboard">
                <methods>
                    
                    <include name="ValidateAllPerformanceDashboardOperations"/>
                    <include name="ValidateAllMeninxDashboardOperations"/>
                </methods>
            </class>
            <class name="TestSeller.LMS">
                <methods>
                    
                    <include name="ModifyLMSData"/>
                </methods>
            </class>
            <class name="TestSeller.Meninx">
                <methods>
                    
                    <include name="GooglePostCreationWithWhatsNew"/>
                    <include name="GooglePostCreationWithEvents"/>
                    <include name="GooglePostCreationWithOffer"/>
                    <include name="FacebookPostCreationWithWhatsNew"/>
                    <include name="FacebookPostCreationWithMultipleImages"/>
                </methods>
            </class>
            <class name="TestSeller.Performance">
                <methods>
                    
                    <include name="CreatePerformanceCampaignWithGooglePositive"/>
                    <include name="CreatePerformanceCampaignWithGoogleNegative"/>
                    <include name="CreatePerformanceCampaignWithFacebook"/>
                    <include name="ValidateAllFieldsWhileCreatePerformanceCampaignWithFacebook"/>
                </methods>
            </class>
            <class name="TestSeller.Settings">
                <methods>
                    
                    <include name="ValidateSettingsProperties"/>
                </methods>
            </class>
            <class name="TestSeller.Support">
                <methods>
                    
                    <include name="ValidateSupportProperties"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>